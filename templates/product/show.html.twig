{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}
{% endblock %}

{% block body %}
	<div class="page-head">
		<h1 class="page-title">{{ product.name }}</h1>
	</div>

	<div class="grid">
		<article class="card">
			<img class="thumb" src="{{ product.image ?: 'https://picsum.photos/seed/fallback/1200/800' }}" alt="{{ product.name }}" loading="lazy" referrerpolicy="no-referrer">

			<div class="card-body">
				<div class="card-top">
					<div class="card-main">
						<div class="card-title">{{ product.name }}</div>

						<div class="muted card-desc">
							{{ product.description }}
						</div>
					</div>

					<div class="price">{{ product.priceCents }}</div>
				</div>

				<div class="badges">
					{% for t in product.tags %}
						<span class="badge">{{ t.name }}</span>
					{% endfor %}
				</div>

				<div class="card-foot">
					{% if product.stock > 3 %}
						<span class="pill ok">Active</span>
						<button class="btn primary" type="button">Add to cart</button>
					{% else %}
						<span class="pill warn">Almost sold out</span>
						<button class="btn disabled" type="button" disabled>Revient bient√¥t</button>
					{% endif %}
				</div>
			</div>
		</article>
	</div>
{% endblock %}
