{# templates/components/_features.html.twig #}
{#
    Three-column features section

    Usage:
        {% include 'components/_features.html.twig' %}
        {% include 'components/_features.html.twig' with { features: customFeatures } %}
#}
{% set default_features = [
    {
        number: '01',
        title: 'Sustainable Materials',
        text: "Ethically sourced, eco-friendly products that don't compromise on quality."
    },
    {
        number: '02',
        title: 'Artisan Crafted',
        text: 'Each piece tells a story, made by skilled craftspeople around the world.'
    },
    {
        number: '03',
        title: 'Timeless Design',
        text: 'Classic aesthetics that transcend trends and last for years.'
    }
] %}

{% set items = features|default(default_features) %}

<section class="promo-features">
    {% for feature in items %}
        <div class="promo-feature">
            <div class="promo-feature__number">{{ feature.number }}</div>
            <div class="promo-feature__content">
                <h4 class="promo-feature__title">{{ feature.title }}</h4>
                <p class="promo-feature__text">{{ feature.text }}</p>
            </div>
        </div>
    {% endfor %}
</section>
