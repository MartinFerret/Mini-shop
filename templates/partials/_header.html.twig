{# templates/partials/_header.html.twig #}
<div class="header-inner">
    <a href="{{ path('app_home') }}" class="logo">
        <span class="logo-icon">M</span>
        <span class="logo-text">Mini Shop</span>
    </a>

    <nav class="header-nav">
        <a href="{{ path('app_home') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}">
            Home
        </a>
        <a href="{{ path('app_about') }}" class="nav-link {% if app.request.attributes.get('_route') == 'app_about' %}active{% endif %}">
            About
        </a>
    </nav>

    {% if app.user %}
    <a href="{{ path('app_logout') }}" class="btn btn-login">
        <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
        </svg>
        <span>Log out</span>
    </a>
    {% else %}
    <a href="{{ path('app_register') }}" class="btn btn-register">
        <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
        </svg>
        <span>Sign up</span>
    </a>
        <a href="{{ path('app_login') }}" class="btn btn-login">
        <svg class="btn-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
        </svg>
        <span>Log in</span>
    </a>
    {% endif %}
</div>
